<Window x:Class="RaRZuweisungWPF.aView.RoundPlan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaRZuweisungWPF.aView"
        mc:Ignorable="d"
        Title="RoundPlan" Height="200" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Label Content="Welche Runden sind 2-er Runden?" Grid.Row="1" Grid.Column="1"/>
        <StackPanel x:Name="RoundStackBox" Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
            <CheckBox x:Name="FirstRoundDef" Content="1. Runde" Margin="0,0,20,0"/>
            <CheckBox x:Name="SecondRoundDef" Content="2. Runde" Margin="0,0,20,0"/>
            <CheckBox x:Name="ThirdRoundDef" Content="3. Runde" Margin="0,0,20,0"/>
            <CheckBox x:Name="FourthRoundDef" Content="4. Runde" Margin="0,0,20,0"/>
            <CheckBox x:Name="FithRoundDef" Content="5. Runde"/>
        </StackPanel>
        <Button x:Name="RowDefinitionsButton" Content="Select Round Plan" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="5" Click="RowDefinitionsButton_Click"/>
    </Grid>
</Window>
